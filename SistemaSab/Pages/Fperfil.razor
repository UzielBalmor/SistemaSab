@page "/fperfil"
@using System.ComponentModel.DataAnnotations

<div class="card">
    <div class="card-header">
        Datos de Perfil de Cliente
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-6">
                <input type="text" class="form-control" placeholder="Nombre" aria-label="Nombre">
            </div>
            <div class="col-6">
                <input type="text" class="form-control" placeholder="Apellido Paterno" aria-label="Apellido Paterno">
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-6">
                <input type="text" class="form-control" placeholder="Apellido Materno" aria-label="Apellido Materno">
            </div>
            <div class="col-6">
                <input type="text" class="form-control" placeholder="CURP" aria-label="CURP">
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-12">
                <input type="email" class="form-control" placeholder="Correo" aria-label="Correo">
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-7">
                <input type="text" class="form-control" placeholder="Calle" aria-label="Calle">
            </div>
            <div class="col-3">
                <input type="number" class="form-control" placeholder="Número Interior" aria-label="Número Interior">
            </div>
            <div class="col-2">
                <input type="number" class="form-control" placeholder="Número Exterior" aria-label="Número Exterior">
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-6">
                <input type="text" class="form-control" placeholder="Localidad" aria-label="Localidad">
            </div>
            <div class="col-6">
                <input type="text" class="form-control" placeholder="Municipio" aria-label="Municipio">
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-6">
                <select class="form-select" aria-label="País">
                    <option selected>País</option>
                    <option value="MX">México</option>
                    <option value="US">Estados Unidos</option>
                    <option value="CA">Canadá</option>
                </select>
            </div>
            <div class="col-6">
                <select class="form-select" aria-label="Estado">
                    <option selected>Estado</option>
                    <option value="1">Puebla</option>
                    <option value="2">Veracruz</option>
                    <option value="3">Ciudad de México</option>
                    <!-- Puedes agregar más estados según el país seleccionado -->
                </select>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-3">
                <select class="form-select" aria-label="Lada">
                    <option selected>Lada</option>
                    <option value="+52">México (+52)</option>
                    <option value="+1">Estados Unidos (+1)</option>
                    <option value="+1">Canadá (+1)</option>
                </select>
            </div>
            <div class="col-9">
                <input type="text" class="form-control" placeholder="Teléfono" aria-label="Teléfono">
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-6">
                <input type="password" class="form-control" placeholder="Contraseña" aria-label="Contraseña">
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-12 text-center">
                <button class="btn btn-primary" type="submit">Registrar</button>
            </div>
        </div>
    </div>
</div>

